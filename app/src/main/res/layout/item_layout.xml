<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    app:strokeColor="@color/black"
    app:strokeWidth="4dp"
    app:cardCornerRadius="15dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_33"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_130"
            android:layout_below="@+id/tv_company"
            android:layout_marginStart="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_22"
            android:layout_marginBottom="@dimen/dp_22"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_age_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_company"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="17dp"
            android:text="@string/age"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_company"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/tv_age_header"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:ignore="UnknownId" />

        <TextView
            android:id="@+id/tv_profession_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_company"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="67dp"
            android:text="@string/profession"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_company"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="67dp"
            android:layout_toRightOf="@+id/tv_profession_header"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:ignore="UnknownId" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>